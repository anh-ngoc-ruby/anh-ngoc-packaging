@model ListProductResponseDto;
@{
    var component = Model.Component;
    var content = component.Content;
    var categorySlug = component.Extra["product_category_slug"] as string;
}
<section class="top-ratting-book-section fix section-padding section-bg">
    <div class="container">
        <div class="top-ratting-book-wrapper">
            <div class="section-title-area">
                <div class="section-title">
                    <h2 class="wow fadeInUp" data-wow-delay=".3s">@content.Title</h2>
                </div>
                <a asp-controller="Page" asp-action="GetListProductPage" asp-route-danh-muc="@categorySlug" class="theme-btn transparent-btn wow fadeInUp" data-wow-delay=".5s">
                    @content.ButtonText <i class="fa-solid fa-arrow-right-long"></i>
                </a>
            </div>
            <div class="row">
                @foreach (var item in Model.Items)
                {
                    <div class="col-xl-6 wow fadeInUp" data-wow-delay="@($".3s")">
                        <div class="top-ratting-box-items">
                            <div class="book-thumb">
                                <a asp-action="GetDetailProductPage" asp-controller="Page" asp-route-slug="@item.Slug"><img src="@item.Image" alt="img"></a>
                            </div>
                            <div class="book-content">
                                <div class="title-header">
                                    <div>
                                        <h5> Design Low Book </h5>
                                        <h3>
                                            <a asp-action="GetDetailProductPage" asp-controller="Page" asp-route-slug="@item.Slug">@item.Name</a>
                                        </h3>
                                    </div>
                                    <ul class="shop-icon d-flex justify-content-center align-items-center">
                                        <li>
                                            <a ><i class="far fa-heart"></i></a>
                                        </li>
                                        <li>
                                            <a >
                                                <img class="icon" src="/images/icon/shuffle.svg" alt="svg-icon">
                                            </a>
                                        </li>
                                        <li>
                                            <a><i class="far fa-eye"></i></a>
                                        </li>
                                    </ul>
                                </div>
                                <span class="mt-10">@item.FinalPrice</span>
      
                                <div class="shop-btn">
                                    <a asp-action="GetDetailProductPage" asp-controller="Page" asp-route-slug="@item.Slug" class="theme-btn">
                                        <i class="fa-solid fa-basket-shopping"></i>Xem chi tiết
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
             
            </div>
        </div>
    </div>
</section>