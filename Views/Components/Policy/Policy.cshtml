@model ListPolicyResponseDto;
<section class="feature-section fix section-padding pt-0">
    <div class="container">
        <div class="feature-wrapper">
            @{
                var index = 1;
            }
            @foreach (var item in Model.Items)
            {
                var delay = $".{index * 2}s";
                <div class="feature-box-items wow fadeInUp" data-wow-delay="@delay">
                    <div class="icon">
                        @Html.Raw($"{@item.Image}")
                    </div>
                    <div class="content">
                        <h3>@Html.Raw($"{@item.Title}")</h3>
                        <p>@Html.Raw($"{@item.Description}")</p>
                    </div>
                </div>

                index++;
            }
        </div>
    </div>
</section>