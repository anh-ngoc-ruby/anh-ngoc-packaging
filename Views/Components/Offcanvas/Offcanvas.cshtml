@model LayoutResponseDto;

@{
    var productCategories = Model.ProductCategories.Items;
    var phone = Model.CompanyInfo.Contacts.Phone;
    var logo = Model.CompanyInfo.Images.PrimaryLogo;
    var contact = Model.CompanyInfo.Contacts;
    var socialMedia = Model.CompanyInfo.SocialMedia;
}
<div class="fix-area">
    <div class="offcanvas__info">
        <div class="offcanvas__wrapper">
            <div class="offcanvas__content">
                <div class="offcanvas__top mb-5 d-flex justify-content-between align-items-center">
                    <div class="offcanvas__logo">
                        <a href="index.html">
                            <img src="@logo" alt="logo-img">
                        </a>
                    </div>
                    <div class="offcanvas__close">
                        <button>
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>

                <div class="mobile-menu fix mb-3"></div>
                <div class="offcanvas__contact">
                    <ul>
                        <li class="d-flex align-items-center">
                            <div class="offcanvas__contact-icon">
                                <i class="fal fa-map-marker-alt"></i>
                            </div>
                            <div class="offcanvas__contact-text">
                                <a target="_blank" href="index-2.html">@Html.Raw($"{@contact.Address}")</a>
                            </div>
                        </li>
                        <li class="d-flex align-items-center">
                            <div class="offcanvas__contact-icon mr-15">
                                <i class="fal fa-envelope"></i>
                            </div>
                            <div class="offcanvas__contact-text">
                                <a href="mailto:{@contact.Email}">
                                    <span class="mailto:{@contact.Email}">@contact.Email</span>
                                </a>
                            </div>
                        </li>
                        <li class="d-flex align-items-center">
                            <div class="offcanvas__contact-icon mr-15">
                                <i class="fal fa-clock"></i>
                            </div>
                            <div class="offcanvas__contact-text">
                                <a target="_blank" href="index-2.html">@contact.OpeningHourWorking</a>
                            </div>
                        </li>
                        <li class="d-flex align-items-center">
                            <div class="offcanvas__contact-icon mr-15">
                                <i class="far fa-phone"></i>
                            </div>
                            <div class="offcanvas__contact-text">
                                <a href="tel:@contact.Phone.Replace(" ", "")">@contact.Phone</a>
                            </div>
                        </li>
                    </ul>
                    <div class="header-button mt-4">
                        <a asp-action="GetContactPage" asp-controller="Page" class="theme-btn text-center">
                            Liện hệ với chúng tôi <i class="fa-solid fa-arrow-right-long"></i>
                        </a>
                    </div>
                    <div class="social-icon d-flex align-items-center">
                        <a href="@socialMedia.Facebook"><i class="fab fa-facebook-f"></i></a>
                        <a href="@socialMedia.TikTok"><i class="fab fa-twitter"></i></a>
                        <a href="@socialMedia.YouTube"><i class="fab fa-youtube"></i></a>
                        <a href="@socialMedia.LinkedIn"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="offcanvas__overlay"></div>