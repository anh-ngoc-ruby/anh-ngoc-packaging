@model CompanyInfoResponseDto

@{
    var introduct1 = Model.Introduces.Introduce1;
    var introduct2 = Model.Introduces.Introduce2;
    var introductImage = Model.Introduces.IntroduceImage;
    var brandName = Model.NameBrand;
}
<section class="about-section fix section-padding">
    <div class="container">
        <div class="about-wrapper">
            <div class="row g-4 align-items-center">
                <div class="col-lg-6 wow fadeInUp" data-wow-delay=".3s">
                    <div class="about-image">
                        <img src="@introductImage" alt="img">
    
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="about-content">
                        <div class="section-title">
                            <h2 class="wow fadeInUp" data-wow-delay=".3s">
                                Về Công Ty <br>@brandName
                            </h2>
                        </div>
                        <p class="mt-3 mt-md-0 wow fadeInUp" data-wow-delay=".5s">
                            @introduct1
                        </p>
                        <p class="mt-3 wow fadeInUp" data-wow-delay=".7s">
                            @introduct2
                        </p>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

