@model ItemListComponentResponseDto;

@{
    var content = Model.Content;
    var config = Model.Config;
    var shapes = Model.Extra["shapes"] as List<object>;
    var image = Model.Extra["image"];
}

<div class="hero-section hero-2 fix" style="background-image: url('@Url.Content(content.Background)')">
    <div class="container">
        <div class="row">
            <div class="col-12 col-xl-6 col-lg-6">
                <div class="hero-items">
                    @for (int i = 1; i <= shapes.Count; i++)
                    {
                        var item = shapes[i - 1];
                        var animationClass = (i % 2 == 0) ? "float-bob-y" : "float-bob-x";
                        <div class="@($"frame-shape{i} {animationClass}")">
                            <img src="@item" alt="shape-img">
                        </div>
                    }
                    <div class="book-image">
                        <img src="@image" alt="img">
                    </div>
                    <div class="hero-content">
                        <h6 class="wow fadeInUp" data-wow-delay=".3s">@Html.Raw($"{@content.Title}")</h6>
                        <h1 class="wow fadeInUp" data-wow-delay=".5s">@Html.Raw($"{@content.SubTitle}")</h1>
                        <p class="text-capitalize">
                            @Html.Raw($"{@content.Description}")
                        </p>
                        <div class="form-clt wow fadeInUp mt-5" data-wow-delay=".9s">
                            <button href='@content.Url' " type="submit" class="theme-btn">
                            @Html.Raw($"{@content.ButtonText}") <i class="fa-solid fa-arrow-right-long"></i>
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>